%user
  %img{:src => "#{@picture.image_link}"}
  %nav
    %ul
      %category #{@picture.category.name}:
      %li= link_to  "View Portfolio", @category
      <br/>
  %arrows
    %left
      = link_to(image_tag("/tmp/prev-0.jpg"), users_path(cat: @prev_category))
    %right
      = link_to(image_tag("/tmp/next-0.jpg"), users_path(cat: @next_category))