%passwords
  .wrapper
    %header
      %h1 Change your password
    %text
      = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        %fieldset
          .row
            .col-sm-4
              - devise_error_messages!
              = f.hidden_field :reset_password_token
              = f.password_field :password, label: "New password", autofocus: true, autocomplete: "off"
              %p
              = f.password_field :password_confirmation, label: "Confirm new password", autocomplete: "off"
              %p
              = f.submit "Change my password"
              %p
      = render "devise/shared/links"
