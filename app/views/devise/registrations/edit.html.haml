%registration
  .wrapper
    %header
      %h1 Update Profile
    %text
      = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        %fieldset
          .row
            .col-sm-4
              - devise_error_messages!
              = f.email_field :email
              = f.password_field :password, label: "Password (blank if not changing)", autocomplete: "off"
              = f.password_field :password_confirmation, autocomplete: "off"
              = f.text_field :first_name
              = f.text_field :last_name
            .col-sm-10
              = f.text_area :bio, label: "Biographical information", rows: 10
            .col-sm-4
              = f.password_field :current_password, label: "Current password (for confirming updates)", autocomplete: "off"
              %p
              = f.submit "Update Profile"
              %p
              = link_to "Cancel my Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete